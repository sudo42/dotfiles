	colors {
		statusline #CCCCCC
		separator  #FF9900
        background $barbg
        inactive_workspace $barbg    $barbg    #5c5c5c
        focused_workspace  #cc0000   #000000   #ee0000
        urgent_workspace   #ffff00   #444400   #ffffff
	}
}

