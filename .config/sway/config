# themes ... see ~/.config/gtk-3.0/settings.ini
set $gsettingsSchema org.gnome.desktop.interface
exec_always {
    gsettings set $gsettingsSchema gtk-theme 'Arc'
    gsettings set $gsettingsSchema icon-theme 'Arc'
    gsettings set $gsettingsSchema cursor-theme 'Numix-Cursor'
    gsettings set $gsettingsSchema font-name 'Noto Sans Medium 10'
}

set $dconfPath /org/gnome/desktop/interface
exec_always {
    dconf write $dconfPath/cursor-theme '"Numix-Cursor-Light"'
    dconf write $dconfPath/gtk-theme '"Qogir"'
    #dconf write $dconfPath/icon-theme '"Luna-Dark"'
    dconf write $dconfPath/icon-theme '"Tela-orange-dark"'
    dconf write $dconfPath/font-name '"Noto Sans 10"'
    dconf write $dconfPath/monospace-font-name '"Noto Sans Mono 10"'
}
